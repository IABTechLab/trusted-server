{
  "name": "tsjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Trusted Server tsjs TypeScript library with queue and simple banner rendering.",
  "scripts": {
    "build": "vite build --mode core && vite build --mode ext && vite build --mode creative",
    "dev": "node scripts/watch-all.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,css,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,json,css,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "24.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^58.1.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.6.0",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
